[meta]
name = "matugen"
description = "theme generated by matugen"
variant = "dark"

[colors.core]
accent = "{{colors.primary.default.hex}}"
accent_foreground = "{{colors.on_primary.default.hex}}"
background = "{{colors.background.default.hex}}"
foreground = "{{colors.on_background.default.hex}}"
secondary_background = "{{colors.surface.default.hex}}"
border = "{{colors.secondary.default.hex}}"

[colors.main_window]
border = "{{colors.secondary.default.hex}}"

[colors.settings_window]
border = "{{colors.secondary.default.hex}}"

[colors.accents]
blue = "#1e66f5"
green = "#40a02b"
magenta = "#ea76cb"
orange = "#fe640b"
red = "#d20f39"
yellow = "df8e1d"
cyan = "#209fb5"
purple = "#8839ef"

[colors.text]
default = "{{colors.on_background.default.hex}}"
muted = "{{colors.secondary_fixed_dim.default.hex}}"
danger = "{{colors.error.default.hex}}"
success = "{{colors.primary.default.hex}}"
placeholder = "{{colors.outline_variant.default.hex}}"
selection = { background = "{{colors.primary.default.hex}}", foreground = "{{colors.on_primary.default.hex}}" }

[colors.text.links]
default = "{{colors.tertiary.default.hex}}"
visited = "{{colors.tertiary.default.hex}}"

[colors.input]
border = "{{colors.outline.default.hex}}"
border_focus = "{{colors.primary.default.hex}}"
border_error = "{{colors.error_container.default.hex}}"

[colors.button.primary]
background = "{{colors.surface.default.hex}}"
foreground = "{{colors.on_surface.default.hex}}"
hover = { background = "{{colors.surface_bright.default.hex_stripped}}2e", foreground = "{{colors.on_surface.default.hex_stripped}}" }
focus = { outline = "colors.core.accent" }

[colors.list.item.hover]
background = "{{colors.surface_container.default.hex}}"
foreground = "{{colors.on_surface.default.hex}}"

[colors.list.item.selection]
background = "{{colors.surface_container.default.hex}}"
foreground = "{{colors.on_surface.default.hex}}"
secondary_background = "{{colors.surface_container.default.hex}}"

secondary_foreground = "{{colors.on_surface.default.hex}}"

[colors.grid.item]
background = "{{colors.surface_container.default.hex}}"
hover = { outline = "{{colors.outline_variant.default.hex}}" }
selection = { outline = "{{colors.outline.default.hex}}" }

[colors.scrollbars]
background = "{{colors.outline_variant.default.hex}}"

[colors.loading]
bar = "{{colors.on_surface.default.hex}}"
spinner = "{{colors.on_surface.default.hex}}"

